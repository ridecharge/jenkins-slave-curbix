{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "name": "ubuntu14lts",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key` }}",
      "region": "us-east-1",
      "source_ami": "ami-d65645be",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "jenkins-slave-curbix Ubuntu 14.04.2 LTS {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_file": "playbook.yml",
      "role_paths": [
        "roles/java",
        "roles/python3"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /var/lib/jenkins",
        "sudo chown ubuntu:ubuntu /var/lib/jenkins",
        "curl http://consul.gocurb.internal/v1/kv/jenkins/config/GITHUB_PRIVATE_SSH_KEY?raw > /home/ubuntu/.ssh/id_rsa",
        "chmod 0400 /home/ubuntu/.ssh/id_rsa",
        "sudo chown ubuntu:ubuntu /run/docker.sock",
        "sudo apt-get install -y curl git build-essential gradle"
      ]
    }
  ]
}